/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "paths": {
      "@app/*": ["src/app/*"],
      "@services/*": ["src/app/services/*"],
      "@services": ["src/app/services/index.ts"],
      "@providers/*": ["src/app/providers/*"],
      "@providers": ["src/app/providers/index.ts"],
      "@interceptors/*": ["src/app/interceptors/*"],
      "@interceptors": ["src/app/interceptors/index.ts"],
      "@models/*": ["src/app/models/*"],
      "@models": ["src/app/models/index.ts"],
      "@pages/*": ["src/app/pages/*"],
      "@pages": ["src/app/pages/index.ts"],
      "@components/*": ["src/app/components/*"],
      "@components": ["src/app/components/index.ts"],
      "@assets/*": ["src/assets/*"],
      "@environments/*": ["src/environments/*"],
    },
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2020",
    "module": "es2020",
    "lib": ["es2018", "dom"]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
